{
  "name": "@saadmniamatullah/vite-plugin-hono-api",
  "version": "1.2.0",
  "description": "Low-config Vite plugin that mounts a Hono API at /api and bundles it alongside your frontend. Supports Node.js, Bun, and Deno runtimes.",
  "keywords": [
    "vite",
    "plugin",
    "hono",
    "api",
    "server",
    "ssr",
    "development",
    "typescript",
    "bun",
    "deno",
    "nodejs",
    "multi-runtime"
  ],
  "homepage": "https://github.com/saadmniamatullah/vite-plugin-hono-api#readme",
  "bugs": {
    "url": "https://github.com/saadmniamatullah/vite-plugin-hono-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saadmniamatullah/vite-plugin-hono-api.git"
  },
  "license": "MIT",
  "author": "Saad M Niamatullah",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/*.ts --dts --format esm --clean",
    "build:play": "vite build --root playground --config playground/vite.config.ts",
    "dev": "tsup src/index.ts --dts --format esm --watch",
    "dev:play": "vite --root playground --config playground/vite.config.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "play": "pnpm -C playground dev",
    "prepare": "husky",
    "preview:play": "vite preview --root playground --config playground/vite.config.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "semantic-release": "^24.2.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "hono": "^4.6.9"
  },
  "peerDependenciesMeta": {
    "@hono/node-server": {
      "optional": true
    },
    "@types/node": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
